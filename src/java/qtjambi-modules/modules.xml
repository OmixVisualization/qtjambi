                    <compilerarg value="-Xlint:deprecation" />
                    <compilerarg value="-Xlint:unchecked" />
                    <src path="${sourcedir}"/>
                    <classpath refid="qtjambi.modulepath"/>
                </javac>
            </else>
        </if>
    </target>

